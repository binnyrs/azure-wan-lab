{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "wanName": {
            "type": "string",
            "defaultValue": "SampleVirtualWan",
            "metadata": {
                "description": "Name of the Virtual Wan."
            }
        },
        "hubName": {
            "type": "string",
            "defaultValue": "SampleVirtualHub",
            "metadata": {
                "description": "Name of the Virtual Hub. A virtual hub is created inside a virtual wan."
            }
        },
        "hubPrefix": {
            "type": "string",
            "defaultValue": "192.168.0.0/24",
            "metadata": {
                "description": "The hub address prefix. This address prefix will be used as the address prefix for the hub vnet"
            }
        },
        "siteName": {
            "type": "string",
            "defaultValue": "SampleVpnSite",
            "metadata": {
                "description": "Name of the vpnsite. A vpnsite represents the on-premise vpn device. A public ip address is mandatory for a vpn site creation."
            }
        },
        "siteAsn": {
            "type": "int",
            "defaultValue": 65101,
            "metadata": {
                "description": "The bgp asn number of a vpnsite."
            }
        }
    },
    "variables": {
        "nvaUri": "uri(deployment().properties.templateLink.uri 'nvaLinux.json')",
        "enableBgp": "true",
        "connectionName": "[concat(parameters('hubName'), '-connection')]",
        "vpnGwName": "[concat(parameters('hubName'), '-vpnGw')]"
    },
    "resources": [
		{
			"comments": "Simulate a branch with a VNET plus an NVA",
			"name": "branchnva",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('nvaUri')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "vnetName": { "value": "[concat(parameters('vnetNamePrefix'), copyIndex(1))]" },
                    "vnetOctets12": { "value": "[concat(parameters('vnetOctet1'), copyIndex(1), '.')]" },
                    "subnetNamePrefix": { "value": "[concat(parameters('vnetNamePrefix'), copyIndex(1), 'Subnet')]"},
                    "gwName": { "value": "[concat(parameters('vnetNamePrefix'), copyIndex(1), 'GW')]" },
                    "gwPIPName": { "value": "[concat(parameters('vnetNamePrefix'), copyIndex(1), 'gwPip')]" },
                    "createGw": { "value": "[parameters('createGw')]"},
                    "enableBgp": { "value": "[parameters('enableBgp')]"},
                    "createVm": { "value": "[parameters('createVm')]"},
                    "vmType": { "value": "[parameters('vmType')]"},
                    "vmSize": { "value": "[parameters('vmSize')]"},
                    "createPip": { "value": "[parameters('createPip')]"},
                    "adminUsername": { "value": "[parameters('adminUsername')]"},
                    "adminPassword": { "value": "[parameters('adminPassword')]"}
                }
            },
            "dependsOn": [
                "[parameters('storageAccountName')]"
            ],
            "copy": {
                "name": "vnetCopy",
                "count": "[parameters('vnetCount')]"
            }
        },
        {
            "type": "Microsoft.Network/virtualWans",
            "name": "[parameters('wanname')]",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": { }
        },
        {
            "type": "Microsoft.Network/virtualHubs",
            "name": "[parameters('hubname')]",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualWans/', parameters('wanname'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('addressPrefix')]",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',parameters('wanname'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/vpnSites",
            "name": "[parameters('vpnsitename')]",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualWans/', parameters('wanname'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('vpnsiteAddressspaceList')]"
                },               
                "bgpProperties": {
                    "asn":  "[parameters('vpnsiteBgpAsn')]",
                    "bgpPeeringAddress": "[reference('<name-of-deployment>').outputs.<property-name>.value]",
                    "peerWeight": 0
                },
                "deviceProperties": {
                    "linkSpeedInMbps": 0
                },
                "ipAddress": "[parameters('vpnsitePublicIPAddress')]",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',parameters('wanname'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/vpnGateways",
            "name": "[parameters('vpngatewayname')]",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualHubs/', parameters('hubname'))]",
                "[concat('Microsoft.Network/vpnSites/', parameters('vpnsitename'))]"
            ],
            "properties": {
                "connections": [
                    {
                        "name": "[parameters('connectionName')]",
                        "properties": {
                            "connectionBandwidth": 10,
                            "enableBgp": "[parameters('enableBgp')]",
                            "remoteVpnSite": {
                                "id": "[resourceId('Microsoft.Network/vpnSites', parameters('vpnsitename'))]"
                            }
                        }
                    }
                ],
                "virtualHub": {
                    "id": "[resourceId('Microsoft.Network/virtualHubs',parameters('hubname'))]"
                },
                "bgpSettings": {
                    "asn": 65515
                }
            }
        }
    ]
}
